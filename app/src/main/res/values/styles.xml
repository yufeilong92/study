    <style name="tv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/center_bottom_margin_left_s</item>
