<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_bg"
    android:orientation="vertical"
    tools:context=".ui.User.SettingActivity">
    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/back" />

        <TextView
            style="@style/TitleBarText"
            android:text="" />

        <ImageView style="@style/TitleBarAction" />

    </LinearLayout>
    <View
        style="@style/view_line_tab_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16">

        <TextView

            android:id="@+id/tv_m_setting_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <View style="@style/view_line_1_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_m_setting_updata"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="版本更新"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v22.22" />
        </LinearLayout>

        <View style="@style/view_line_1_gray" />

        <TextView
            android:id="@+id/tv_m_setting_paw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <View style="@style/view_line_1_gray" />
    </LinearLayout>
</LinearLayout>