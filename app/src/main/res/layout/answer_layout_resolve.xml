<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View style="@style/view_line_10_gray" />
    <LinearLayout
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="答案:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:paddingLeft="@dimen/space_8"
            android:text="c"
            android:id="@+id/tv_b_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        android:paddingTop="@dimen/space_8"
        android:id="@+id/ll_b_resolve_result"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="解析"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

         <TextView
             android:paddingLeft="@dimen/space_10"
             android:textColor="@color/black"
             android:lineSpacingExtra="2dp"
             android:text="解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析解析"
             android:textSize="@dimen/text_size_12"
             android:id="@+id/tv_b_rosole_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="@dimen/space_8"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView

        android:text="正确率:"
        android:textColor="@color/text_fu_color"
        android:textSize="@dimen/text_size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_b_accuracy"
            android:text="20%"
            android:paddingLeft="@dimen/space_8"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_fu_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/view_line_10_gray"/>

</LinearLayout>