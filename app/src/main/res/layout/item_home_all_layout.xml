<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_16">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/space_8">

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_item_home_title_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/space_4"
            android:textSize="@dimen/space_16"
            android:textColor="@color/text_title_color"
            android:text="试标试标试标试标试标试标试标试标试标试标试标试标试标测试标题测试标题测试标题测试标题" />

        <Space style="@style/space_16_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/list_icon_pageview"
                android:id="@+id/tv_item_home_look_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/space_6"
                android:text="123" />

            <Space style="@style/space_16_width" />

            <TextView
                android:drawablePadding="@dimen/space_6"
                android:drawableLeft="@drawable/list_icon_like_s"
                android:id="@+id/tv_item_home_laud_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_home_all"
        android:layout_width="@dimen/space_100dp"
        android:layout_height="match_parent"
        android:padding="@dimen/space_8"
        android:src="@mipmap/ic_launcher_round" />
</LinearLayout>