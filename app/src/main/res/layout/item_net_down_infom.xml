<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_down_infom_play"
            android:layout_width="@dimen/space_16"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space_10"
            android:src="@drawable/c_icon_paly_n" />

        <TextView
            android:id="@+id/tv_item_down_infom_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2222222222222222222"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_14" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在下载"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2M/s"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="555M"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <ProgressBar
        android:layout_marginLeft="26dp"
        android:progress="22"
        android:max="200"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>