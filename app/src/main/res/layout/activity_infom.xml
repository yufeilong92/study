<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.InfomActivity">

    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/back" />

        <TextView
            style="@style/TitleBarText"
            android:text="" />

        <ImageView style="@style/TitleBarAction" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_infom_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <com.andview.refreshview.XRefreshView
            android:id="@+id/xfv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_64"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/web_infom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    tools:ignore="WebViewLayout" />

                <LinearLayout
                    android:id="@+id/li_supperNumber"
                    android:layout_width="@dimen/space_100dp"
                    android:layout_height="@dimen/space_100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_home_supper"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/space_16">

                    <CheckBox
                        android:id="@+id/chb_iofom_supper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/select_issupper_bg"
                        android:gravity="center" />

                    <Space style="@style/space_8_height" />

                    <TextView
                        android:id="@+id/tv_iofom_suppernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="123"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <Space style="@style/space_16_height" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_8"
                    android:background="@color/input_bg" />

                <Space style="@style/space_16_height" />

                <TextView
                    android:id="@+id/tv_infom_appraisenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16"
                    android:text="评论(99)" />

                <Space style="@style/space_16_height" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rlv_infom_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16" />

            </LinearLayout>
        </com.andview.refreshview.XRefreshView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View style="@style/view_line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/space_8">

                <EditText
                    android:id="@+id/et_infom_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_search_bg"
                    android:gravity="center_vertical"
                    android:hint="我来说两句..."
                    android:maxLines="4"
                    android:minLines="2"
                    android:paddingBottom="@dimen/space_4"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16"
                    android:paddingTop="@dimen/space_4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <Button
                    android:id="@+id/btn_infom_send"
                    android:layout_width="@dimen/space_22"
                    android:layout_height="@dimen/space_22"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_send"
                    android:src="@mipmap/ic_search" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlv_infom_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_56"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/gray"
            android:indeterminateTintMode="src_atop" />
    </RelativeLayout>
</LinearLayout>