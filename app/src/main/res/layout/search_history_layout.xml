<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/li_search_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_search_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:padding="@dimen/space_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_search_history" />

        <TextView
            android:padding="@dimen/space_8"
            android:id="@+id/tv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="清除记录" />

    </RelativeLayout>

    <com.xuechuan.xcedu.weight.FlowLayout
        android:id="@+id/fl_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_margin="@dimen/space_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/host_nominate" />
    </RelativeLayout>
    <com.xuechuan.xcedu.weight.FlowLayout
        android:id="@+id/fl_search_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>