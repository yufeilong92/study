<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/colorPrimary</item>-->
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorAccent</item>-->

    <!--</style>-->

    <style name="App_NOAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!--//actionabr 颜色-->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/activity_topbar_bg</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TitleBar">
        <item name="android:id">@id/activity_title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TitleBarAction">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
    </style>

    <style name="TitleBarText">
        <item name="android:id">@id/activity_title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="iv_click_controller_port_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/bottom_layout_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_top">
        <item name="android:layout_width">@dimen/top_layout_height_s</item>
        <item name="android:layout_height">@dimen/top_layout_height_s</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_not_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/top_layout_color_white</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_click_controller_land_center">
        <item name="android:layout_width">@dimen/center_right_layout_height</item>
        <item name="android:layout_height">@dimen/center_right_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/center_bottom_margin_left_s</item>
        <item name="android:textColor">@color/polyv_play_bt_color</item>
        <item name="android:textSize">@dimen/bottom_right_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>

    </style>

    <style name="iv_click_controller_land_top_l">
        <item name="android:layout_width">@dimen/top_layout_dm_height</item>
        <item name="android:layout_height">@dimen/top_layout_dm_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_top_dm">
        <item name="android:layout_width">@dimen/dmcolor_commom_wh</item>
        <item name="android:layout_height">@dimen/dmcolor_commom_wh</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:translationX">@dimen/dmcolor_commom_tran</item>
        <item name="android:translationY">@dimen/talk_common_margin</item>

    </style>


    <style name="tv_click_controller_land_center_s_padding_tb" parent="tv_click_controller_land_center_s">
        <item name="android:paddingTop">@dimen/talk_common_margin</item>
        <item name="android:paddingBottom">@dimen/talk_common_margin</item>
    </style>

    <style name="space_8_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="space_30_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="space_20_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="space_100_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="space_8_width">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="space_16_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="space_16_width">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="li_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:background">@drawable/bg_login_li</item>
        <item name="android:paddingEnd">@dimen/space_8</item>
        <item name="android:paddingRight">@dimen/space_8</item>
        <item name="android:paddingStart">@dimen/space_8</item>
        <item name="android:paddingLeft">@dimen/space_8</item>

    </style>

    <style name="et_style">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/space_8</item>
    </style>
</resources>
