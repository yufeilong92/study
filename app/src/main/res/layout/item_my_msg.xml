<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_16"
    android:layout_marginBottom="@dimen/space_16"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_my_msg_img"
        android:layout_width="@dimen/space_56"
        android:layout_height="@dimen/space_56" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_msg_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张三" />

            <TextView
                android:id="@+id/tv_my_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:background="@drawable/btn_bg_gray"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:paddingTop="@dimen/space_4"
                android:text="21分钟" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_msg_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="来自"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</LinearLayout>