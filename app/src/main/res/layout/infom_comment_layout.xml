<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <WebView
        android:id="@+id/web_infom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:ignore="WebViewLayout" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_infom_select_supper"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/space_16">

        <ImageView
            android:id="@+id/iv_iofom_supper"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/list_icon_like_n" />

        <Space style="@style/space_8_height" />

        <TextView
            android:id="@+id/tv_iofom_suppernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <Space style="@style/space_16_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_8"
        android:background="@color/input_bg" />

    <Space style="@style/space_16_height" />

    <TextView
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:id="@+id/tv_infom_appraisenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论(99)" />

    <Space style="@style/space_16_height" />

    <android.support.v7.widget.RecyclerView
        android:paddingRight="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:id="@+id/rlv_infom_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>