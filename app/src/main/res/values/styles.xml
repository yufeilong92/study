    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <style name="App_NOAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!--//actionabr 颜色-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/text_title_color</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/text_title_color</item>
    </style>


    <style name="TitleBar">
        <item name="android:id">@id/activity_title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TitleBarAction">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
    </style>

    <style name="TitleBarText">
        <item name="android:id">@id/activity_title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="iv_click_controller_port_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/bottom_layout_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_top">
        <item name="android:layout_width">@dimen/top_layout_height_s</item>
        <item name="android:layout_height">@dimen/top_layout_height_s</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="tv_click_controller_land_center_not_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/top_layout_color_white</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_click_controller_land_center">
        <item name="android:layout_width">@dimen/center_right_layout_height</item>
        <item name="android:layout_height">@dimen/center_right_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_bottom">
